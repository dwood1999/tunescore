# TuneScore Docker Environment Configuration
# Copy this to .env in the project root and fill in your values

# ======================================
# Database Configuration
# ======================================
POSTGRES_USER=tunescore
POSTGRES_PASSWORD=changeme_generate_secure_password
POSTGRES_DB=tunescore

# ======================================
# Security
# ======================================
# Generate with: openssl rand -hex 32
SECRET_KEY=changeme_generate_secure_secret_key

# ======================================
# AI Services (Optional)
# ======================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ======================================
# Music Industry Integrations (Optional)
# ======================================
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
YOUTUBE_API_KEY=

# ======================================
# Application Settings
# ======================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# ======================================
# Domain Configuration
# ======================================
# Update this to your actual domain
DOMAIN=music.quilty.app
FRONTEND_URL=https://music.quilty.app
BACKEND_URL=https://music.quilty.app/api

# ======================================
# Port Configuration (for development/testing)
# ======================================
# These ports are only exposed on localhost by default
# Your nginx reverse proxy should handle public access
BACKEND_PORT=8001
FRONTEND_PORT=5128
POSTGRES_PORT=5433  # Different from quilty.app to avoid conflicts
REDIS_PORT=6380     # Different from quilty.app to avoid conflicts

