# TuneScore Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://dwood@127.0.0.1:5432/tunescore
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# JWT Configuration
JWT_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120
REFRESH_TOKEN_EXPIRE_DAYS=30

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false
API_V1_STR=/api/v1

# Frontend Configuration
FRONTEND_URL=http://localhost:5128
FRONTEND_PORT=5128
DEV_FRONTEND_PORT=5128

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:5128,http://127.0.0.1:5128

# File Storage Configuration
STORAGE_DIR=files
MAX_FILE_SIZE_MB=500

# Spotify Integration (Optional - get from https://developer.spotify.com/)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:5128/api/v1/integrations/spotify/callback

# YouTube Integration (Optional - get from https://console.cloud.google.com/)
YOUTUBE_API_KEY=

# AI Services (Optional)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Cost Governor Configuration
ANALYSIS_MAX_USD=5.0
USER_DAILY_MAX_USD=50.0

# Logging Configuration
ENABLE_PROMPT_LOGGING=true
PROMPT_LOG_PATH=logs/api_prompts.log
PROMPT_LOG_LEVEL=INFO
