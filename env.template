# TuneScore Environment Configuration
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql+asyncpg://dwood@/tunescore

# JWT & Security
JWT_SECRET=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120
REFRESH_TOKEN_EXPIRE_DAYS=30

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Frontend
FRONTEND_URL=http://localhost:5128
FRONTEND_PORT=5128
DEV_FRONTEND_PORT=5128

# CORS
BACKEND_CORS_ORIGINS=http://localhost:5128,http://127.0.0.1:5128

# File Storage
STORAGE_DIR=files
MAX_FILE_SIZE_MB=500

# AI Services (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Music Industry Integrations
# Spotify (Get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:8001/api/v1/integrations/spotify/callback

# YouTube Data API (Get from https://console.cloud.google.com/)
YOUTUBE_API_KEY=

# YouTube Analytics API (requires OAuth 2.0)
# Guide: https://developers.google.com/youtube/analytics
# Enable "YouTube Analytics API" in Google Cloud Console
# For channel owners: provides viewing stats, demographics, revenue data
# For content owners: aggregated data across all linked channels
YOUTUBE_ANALYTICS_ENABLED=true

# Analysis Configuration
DEFAULT_AI_MODEL=claude-3-5-sonnet-20241022
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT=300

# Cost Governor
ANALYSIS_MAX_USD=5.0
USER_DAILY_MAX_USD=50.0

# Logging
ENABLE_PROMPT_LOGGING=true
PROMPT_LOG_PATH=logs/api_prompts.log
PROMPT_LOG_LEVEL=INFO
PROMPT_LOG_MAX_SIZE_MB=100
PROMPT_LOG_RETENTION_DAYS=30
PROMPT_LOG_BACKUP_COUNT=5

